<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/screen4">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <ImageView
            android:layout_width="@dimen/walk_through_image_width"
            android:layout_height="@dimen/walk_through_image_width"
            android:layout_marginBottom="@dimen/walk_throught_margin_bottom"
            android:src="@drawable/screen4img"/>
        <TextView
            android:layout_marginTop="@dimen/walk_throught_margin_top"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/screen4"
            android:textColor="@color/white"
            android:textSize="40dp"
            android:textStyle="bold"
            android:layout_gravity="center_horizontal"
            android:gravity="center_horizontal"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/walk_throught_margin_top"
            android:paddingLeft="@dimen/walk_throught_padding"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:text="@string/description_screen4"
            android:layout_marginBottom="@dimen/walk_throught_margin_bottom"
            android:textSize="20dp"
            />

    </LinearLayout>

</RelativeLayout>